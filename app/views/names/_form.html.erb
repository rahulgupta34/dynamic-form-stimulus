<%= form_with(model: name) do |form| %>
  <% if name.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(name.errors.count, "error") %> prohibited this name from being saved:</h2>

      <ul>
        <% name.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>
  
   <div>
   
    <% Name::Hobby.map do |key| %>
    
      <%= form.check_box :hobby, { multiple: true }, key %>  
      <%= form.label key %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
